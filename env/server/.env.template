# Environment configuration

# Application Environment (development, production, etc.)
NODE_ENV=

# Secret key used for signing and verifying cookies
COOKIE_SECRET=

# Secret key used to sign JWT tokens
JWT_KEY=

# Duration (in seconds) for access tokens before expiration
ACCESS_TOKEN_DURATION=

# Duration (in seconds) for refresh tokens before expiration
REFRESH_TOKEN_DURATION=

# PostgreSQL database configuration
POSTGRES_HOST=  # PostgreSQL server hostname or IP
POSTGRES_PORT=  # PostgreSQL server port
POSTGRES_DB_NAME=  # Name of the PostgreSQL database
POSTGRES_ACCESS_USER=  # PostgreSQL user with access permissions
POSTGRES_ACCESS_PASSWORD=  # Password for the PostgreSQL access user

# Redis configuration
REDIS_HOST=  # Redis server hostname or IP
REDIS_PORT=  # Redis server port
REDIS_ACCESS_USER=  # Redis username (if authentication is enabled)
REDIS_ACCESS_PASSWORD=  # Redis password (if authentication is enabled)
REDIS_DB_INDEX=  # Redis database index to use (default is 0)

# MongoDB configuration
MONGO_HOST=  # MongoDB server hostname or IP
MONGO_PORT=  # MongoDB server port
MONGO_DB_NAME=  # Name of the MongoDB database
MONGO_ACCESS_USER=  # MongoDB username (if authentication is enabled)
MONGO_ACCESS_PASSWORD=  # MongoDB password (if authentication is enabled)

# Twilio API credentials for sending SMS
TWILIO_ACCOUNT_SID=  # Twilio account SID
TWILIO_AUTH_TOKEN=  # Twilio authentication token
TWILIO_PHONE_NUMBER=  # Twilio phone number for sending messages

# Google OAuth configuration
GOOGLE_CLIENT_ID=  # Google OAuth client ID
GOOGLE_CLIENT_SECRET=  # Google OAuth client secret
GOOGLE_AUTHORIZATION_URL=  # Google OAuth authorization URL
GOOGLE_TOKEN_URL=  # Google OAuth token exchange URL
GOOGLE_USER_INFO_URL=  # Google API URL to fetch user profile information
GOOGLE_CALLBACK_URL=  # Callback URL for Google OAuth authentication

# Backend server configuration
BACKEND_CLIENT=  # Allowed client URL(s) for CORS
BACKEND_PORT=  # Port number the backend server runs on
